<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/lblTitulo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonF2"
        android:layout_width="93dp"
        android:layout_height="56dp"
        android:layout_marginBottom="356dp"
        android:backgroundTint="@color/buttonFecha"
        android:onClick="mostrarVista"
        android:text="@string/lblFecha"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/txtF2" />

    <EditText
        android:id="@+id/txtF2"
        android:layout_width="210dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="356dp"
        android:ems="10"
        android:hint="@string/lblFecha"
        android:inputType="text"
        android:textAlignment="center"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonF1"
        android:layout_width="93dp"
        android:layout_height="56dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/buttonFecha"
        android:onClick="mostrarVista"
        android:text="@string/lblFecha"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonF2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/txtF1" />

    <EditText
        android:id="@+id/txtF1"
        android:layout_width="210dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:hint="@string/lblFecha"
        android:inputType="text"
        android:textAlignment="center"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/txtF2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonEjecutar"
        android:layout_width="168dp"
        android:layout_height="71dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/buttonEjecutar"
        android:onClick="calcular"
        android:text="@string/lblButton"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>